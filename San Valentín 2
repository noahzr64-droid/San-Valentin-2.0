            50% {
                transform: scale(1.05);
            }
        }

        .floating-heart {
            position: absolute;
            font-size: 2rem;
            animation: float-heart-final 4s ease-in infinite;
            pointer-events: none;
        }

        @keyframes float-heart-final {
            0% {
                opacity: 1;
                transform: translateY(0) translateX(0) rotate(0deg);
            }
            100% {
                opacity: 0;
                transform: translateY(-100vh) translateX(var(--tx)) rotate(360deg);
