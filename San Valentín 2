<body>
    <!-- Corazones flotantes de fondo -->
    <div class="floating-hearts-bg" id="floatingHeartsContainer"></div>

    <!-- Contenedor principal -->
    <div class="main-container">
        <!-- Secci√≥n de animaci√≥n inicial -->
        <div class="animation-section">
            <!-- Contenedor de la gota -->
            <div class="drop-container">
                <div class="water-drop"></div>
            </div>

            <!-- Contenedor del √°rbol -->
            <div class="tree-container">
                <div class="tree-trunk"></div>
                <div class="tree-crown">
                    <div class="heart-crown"></div>
                </div>
                <div class="petals-container" id="petalsContainer"></div>
            </div>

            <!-- Texto rom√°ntico -->
            <div class="romantic-text" id="romanticText">
                Cada momento a tu lado es un regalo del coraz√≥n.
            </div>

            <!-- Contador regresivo -->
            <div class="countdown-section">
                <div class="countdown-item">
                    <div class="countdown-value" id="days">0</div>
                    <div class="countdown-label">D√≠as</div>
                </div>
                <div class="countdown-item">
                    <div class="countdown-value" id="hours">0</div>
                    <div class="countdown-label">Horas</div>
                </div>
                <div class="countdown-item">
                    <div class="countdown-value" id="minutes">0</div>
                    <div class="countdown-label">Minutos</div>
                </div>
                <div class="countdown-item">
                    <div class="countdown-value" id="seconds">0</div>
                    <div class="countdown-label">Segundos</div>
                </div>
            </div>

            <!-- Pregunta y botones -->
            <div class="question-section">
                <div class="question-text">
                    ¬øQuieres ser mi San Valent√≠n?
                </div>
                <div class="buttons-container">
                    <button class="btn btn-yes" id="btnYes">S√≠ üíñ</button>
                    <button class="btn btn-no" id="btnNo">No üôà</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Respuesta final -->
    <div class="final-response" id="finalResponse">
        <div class="final-message">
            ¬°Te amo! üíï
        </div>
    </div>

    <!-- Bot√≥n de m√∫sica -->
    <button class="music-toggle" id="musicToggle" title="Activar/Desactivar m√∫sica">üéµ</button>

    <!-- Audio para m√∫sica rom√°ntica -->
    <audio id="musicPlayer" loop>
        <!-- La m√∫sica se cargar√° desde una fuente en l√≠nea -->
    </audio>

    <script>
        // ===== CONFIGURACI√ìN ===== 
        const CONFIG = {
            // Fecha desde donde contar (Ej: San Valent√≠n)
            targetDate: new Date('2026-02-14T00:00:00').getTime(),
            
            // Texto rom√°ntico personalizable
            romanticText: 'Cada momento a tu lado es un regalo del coraz√≥n.',
            
            // Mensaje final personalizable
            finalMessage: '¬°Te amo! üíï',
            
            // URL de m√∫sica rom√°ntica (opcional)
            musicUrl: 'https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3'
        };

        // ===== VARIABLES GLOBALES ===== 
        let musicActive = false;
        let dropAnimation = null;

        // ===== FUNCIONES DE INICIALIZACI√ìN ===== 

        /**
         * Inicializa corazones flotantes de fondo
         */
        function initFloatingHearts() {
            const container = document.getElementById('floatingHeartsContainer');
            const heartCount = window.innerWidth > 768 ? 8 : 5;

            for (let i = 0; i < heartCount; i++) {
                const heart = document.createElement('div');
                heart.className = 'heart-bg';
                heart.textContent = '‚ù§Ô∏è';
                heart.style.left = Math.random() * 100 + '%';
                heart.style.top = (Math.random() * 50 - 50) + '%';
                heart.style.animationDelay = Math.random() * 2 + 's';
                heart.style.animationDuration = (4 + Math.random() * 4) + 's';
                container.appendChild(heart);
            }
        }

        /**
         * Crea p√©talos/corazones peque√±os cuando florece el √°rbol
         */
        function createPetals() {
            const container = document.getElementById('petalsContainer');
            const petalCount = 15;

            for (let i = 0; i < petalCount; i++) {
                const petal = document.createElement('div');
                petal.className = 'petal-heart';
                petal.textContent = 'üíï';
                
                const x = (Math.random() - 0.5) * 150;
                const delay = 4 + (i * 0.1);
                
                petal.style.left = '50%';
                petal.style.top = '50%';
                petal.style.setProperty('--tx', x + 'px');
                petal.style.animationDelay = delay + 's';
                
                container.appendChild(petal);
            }
        }

        /**
         * Actualiza el contador regresivo
         */
        function updateCountdown() {
            const now = new Date().getTime();
            const distance = CONFIG.targetDate - now;

            if (distance < 0) {
                document.getElementById('days').textContent = '0';
                document.getElementById('hours').textContent = '0';
                document.getElementById('minutes').textContent = '0';
                document.getElementById('seconds').textContent = '0';
                return;
            }

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById('days').textContent = String(days).padStart(2, '0');
            document.getElementById('hours').textContent = String(hours).padStart(2, '0');
            document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
            document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
        }

        /**
         * Maneja el bot√≥n "S√≠"
         */
        function handleYesClick() {
            const finalResponse = document.getElementById('finalResponse');
            finalResponse.classList.add('show');

            // Crear corazones flotantes finales
            createFloatingHearts();

            // Reproducir m√∫sica si est√° disponible
            if (musicActive) {
                const audio = document.getElementById('musicPlayer');
                audio.play().catch(err => console.log('No se pudo reproducir la m√∫sica'));
            }
        }

        /**
         * Crea corazones flotantes en la respuesta final
         */
        function createFloatingHearts() {
            const finalResponse = document.getElementById('finalResponse');
            const heartCount = 20;

            for (let i = 0; i < heartCount; i++) {
                const heart = document.createElement('div');
                heart.className = 'floating-heart';
                heart.textContent = '‚ù§Ô∏è';
                heart.style.left = Math.random() * 100 + '%';
                heart.style.top = '100%';
                heart.style.setProperty('--tx', (Math.random() - 0.5) * 200 + 'px');
                heart.style.animationDelay = (i * 0.1) + 's';
                finalResponse.appendChild(heart);
            }
        }

        /**
         * Maneja el bot√≥n "No" - se mueve aleatoriamente
         */
        function handleNoHover() {
            const btnNo = document.getElementById('btnNo');
            const maxX = window.innerWidth - 150;
            const maxY = window.innerHeight - 60;

            const randomX = Math.random() * maxX;
            const randomY = Math.random() * maxY;

            btnNo.style.position = 'fixed';
            btnNo.style.left = randomX + 'px';
            btnNo.style.top = randomY + 'px';
        }

        /**
         * Maneja la m√∫sica
         */
        function toggleMusic() {
            const musicToggle = document.getElementById('musicToggle');
            const audio = document.getElementById('musicPlayer');

            musicActive = !musicActive;

            if (musicActive) {
                musicToggle.style.background = 'linear-gradient(135deg, #FF69B4 0%, #FF1493 100%)';
                // Intentar reproducir m√∫sica
                audio.play().catch(err => {
                    console.log('No se pudo reproducir la m√∫sica autom√°ticamente');
                    // Mostrar un mensaje al usuario si lo deseas
                });
            } else {
                musicToggle.style.background = 'linear-gradient(135deg, #FF1493 0%, #FFB6D9 100%)';
                audio.pause();
                audio.currentTime = 0;
            }
        }

        /**
         * Inicializa todos los event listeners
         */
        function initEventListeners() {
            const btnYes = document.getElementById('btnYes');
            const btnNo = document.getElementById('btnNo');
            const musicToggle = document.getElementById('musicToggle');

            btnYes.addEventListener('click', handleYesClick);

            // El bot√≥n No se mueve en hover y en touch
            btnNo.addEventListener('mouseover', handleNoHover);
            btnNo.addEventListener('touchstart', (e) => {
                e.preventDefault();
                handleNoHover();
            });

            musicToggle.addEventListener('click', toggleMusic);
        }

        /**
         * Funci√≥n de inicializaci√≥n principal
         */
        function init() {
            // Establecer texto rom√°ntico personalizable
            document.getElementById('romanticText').textContent = CONFIG.romanticText;
            document.getElementById('finalResponse').querySelector('.final-message').textContent = CONFIG.finalMessage;

            // Iniciar m√∫sica (opcional)
            const audio = document.getElementById('musicPlayer');
            if (CONFIG.musicUrl) {
                audio.src = CONFIG.musicUrl;
            }

            // Inicializar elementos
            initFloatingHearts();
            createPetals();
            initEventListeners();

            // Actualizar contador cada segundo
            updateCountdown();
            setInterval(updateCountdown, 1000);

            // Reproducir animaci√≥n de gota autom√°ticamente
            setTimeout(() => {
                const waterDrop = document.querySelector('.water-drop');
                waterDrop.style.animation = 'drop-fall 2s ease-in forwards';
            }, 300);
        }

        // Iniciar cuando el DOM est√© listo
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', init);
        } else {
            init();
        }
    </script>
</body>
</html>
